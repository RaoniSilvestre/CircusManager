<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.ufrn.imd.circusmanager.Controller.ZooController.AddAnimalController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Título -->
    <Label text="Adicionar animal" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Ocupação -->
    <HBox spacing="10.0">
        <Label text="Especie:"/>
        <ComboBox fx:id="especieComboBox"/>
    </HBox>

    <!-- Nome -->
    <HBox spacing="10.0">
        <Label text="Nome:"/>
        <TextField fx:id="nomeTextField" promptText="Digite o nome do animal"/>
    </HBox>

    <!-- Salário -->
    <HBox spacing="10.0">
        <Label text="Custo:"/>
        <TextField fx:id="valorManutencaoTextField" promptText="Digite o custo de manutenção"/>
    </HBox>

    <!-- Botões -->
    <HBox spacing="10.0">
        <Button text="Voltar" onAction="#voltar"/>
        <Button text="Adicionar animal" onAction="#adicionarAnimal"/>
    </HBox>
</VBox>
