<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<!-- Imagem de fundo -->

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="br.ufrn.imd.circusmanager.Controller.ZooController.TelaZooController">

  <!-- Imagem de fundo -->
  <ImageView fx:id="imagemFundo" fitWidth="800" fitHeight="600" preserveRatio="false" />

  <!-- Fundo cinza semitransparente -->
  <Rectangle width="500" height="360" arcWidth="20" arcHeight="20"
              style="-fx-fill: rgba(128, 128, 128, 0.85);" />

  <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
      <Label  text="Animais" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white; 
                      -fx-effect: dropshadow(gaussian, black, 10, 0.7, 2, 2);" />
      
      <Button text="Ver lista de animais" onAction="#verListaAnimais"/>
      <Button text="Adicionar animal" onAction="#adicionarAnimal"/>
      <Button text="Remover animal" onAction="#removerAnimal"/>
      <Button text="Voltar" onAction="#voltar"/>
  </VBox>

</StackPane>