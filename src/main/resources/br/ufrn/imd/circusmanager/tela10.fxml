<?xml version="1.0" encoding="UTF-8"?> 
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.ufrn.imd.circusmanager.Controller.TelaListaAnimaisController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Título -->
    <Label text="Lista de Animais:" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Lista de funcionários com o nome e a ocupação -->
    <ListView fx:id="listaAnimais" prefWidth="300.0" prefHeight="200.0" />

    <!-- Botão voltar -->
    <Button text="Voltar" onAction="#voltar" />
</VBox>
