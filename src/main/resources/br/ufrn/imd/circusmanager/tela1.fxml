<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.ufrn.imd.circusmanager.Control.TelaInicialController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    
    <Label text="Circus Manager" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Button text="Iniciar" onAction="#onHelloButtonClick"/>
    <Button text="Sair" onAction="#sairDoSistema"/>
</VBox>
