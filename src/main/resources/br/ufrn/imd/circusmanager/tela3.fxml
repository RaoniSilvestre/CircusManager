<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="br.ufrn.imd.circusmanager.Controller.CriarCircoController">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <!-- Título -->
            <Label text="Criar Circo" style="-fx-font-size: 20; -fx-underline: true;" />

            <!-- Nome do Circo -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Nome do circo:" />
                <TextField fx:id="nomeCircoField" prefWidth="200" />
            </HBox>

            <!-- Saldo do Circo -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Saldo do circo:" />
                <TextField fx:id="saldoCircoField" prefWidth="200" />
            </HBox>

            <!-- Botões -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Voltar" onAction="#voltar" />
                <Button text="Criar" onAction="#criarCirco" />
            </HBox>
        </VBox>
    </children>
</StackPane>
